{
	"name": "Netstream Lab Dev Container",
	"dockerFile": "../Dockerfile", // Path to your existing Dockerfile relative to the .devcontainer folder
	"context": "..", // Set the context to the root of your project
	"workspaceFolder": "/workspace", // Set this to your working directory inside the container
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"settings": {
			"terminal.integrated.shell.linux": "/bin/bash"
		},
		"extensions": [
			"ms-vscode.cpptools", // Example extensions, you can add more
			"ms-azuretools.vscode-docker",
			"eamodio.gitlens"
		]
	}
}